@model Core.web.Mvc.Authentication.Models.AccountViewModels.AccountLoginModel

@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/_LayoutUnAuth.cshtml";
    <style>

        /* custom css*/
        .btn-btn_f {
            background-color: #22398d !important;
            color: #fff;
        }
    </style>
}

<div class="page-content">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default m-t-10">
                <div class="panel-heading"><h3 class="text-center">User Login</h3></div>
                <div class="panel-body">

                    <section id="loginForm">
                        <div class="row">
                            <div class="col-md-3 hidden-xs">
                                <div class="text-center">
                                    <i class="fa fa-unlock-alt fa-5x"></i>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <p class="text-muted font-13">
                                    Enter your username and password and click on login button.
                                </p>
                                @using (Html.BeginForm("login", "account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                     @Html.HiddenFor(m => m.ReturnUrl)
                                    <div class="row">
                                        
                                        <div class="row">
                                            <div class="col-md-offset-1 col-sm-8">
                                                <div class="form-group">

                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                                        <input placeholder="email" id="login" name="Email" value="" class="form-control" type="email">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-12">
                                                <span asp-validation-for="email" class="text-danger"></span>
                                            </div>

                                        </div>
                                        <div class="row">
                                            <div class="col-md-offset-1 col-sm-8">
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                                        <input placeholder="Password" id="password" name="password" value="" class="form-control" type="password">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-12">
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                <div>
                                                    <div>
                                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    </div>
                                                    @if (TempData["Success"] != null)
                                                    {
                                                        <div class="alert alert-success fade in">
                                                            <button class="close" data-dismiss="alert">
                                                                <i class="fa-fw fa fa-check-circle"></i>
                                                            </button>
                                                            @TempData["Success"]
                                                        </div>
                                                    }
                                                    @if (TempData["Error"] != null)
                                                    {
                                                        <div class="alert alert-danger fade in">
                                                            <button class="close" data-dismiss="alert">
                                                                <i class="fa-fw fa fa-times"></i>
                                                            </button>
                                                            @TempData["Error"]
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-offset-1 col-sm-8 text-right">
                                                <button type="submit" class="btn btn-btn_f btn-block left-icon"><i class="fa fa-sign-in"></i> Log in</button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <hr />
                        <div class="form-group">
                            <div class="col-sm-12 login-disclaimer text-danger">
                                <i class="fa fa-warning warning"></i>  By loging in, you ACCEPT to use this system ONLY for approved business purposes.
                            </div>
                            <br />
                            <div class="col-sm-12">
                                <a href="@Url.Action("ForgotPassword", "account", new { Area = "Authentication" })" style="color: #22398d;">
                                    <small>Forgot Username/Password? </small>
                                </a>
                                <a href="@Url.Action("Register", "account", new { Area = "Authentication" })" style="color: #22398d;">
                                    <small>Create your Account <i class="fa fa-pencil"></i> </small>
                                </a>
                            </div>
                            <div class="col-sm-12">
                                <div class="pull-right">
                                    <a href="https://www.linkedin.com/company/betsoftware/?originalSubdomain=za"><span> <i class="fa fa-linkedin fa-1x"></i>  </span> </a> &nbsp; <a href="#"><span><i class="fa fa-twitter fa-1x"></i> </span> </a> &nbsp; <a href="#" target="_blank"> <span><i class="fa fa-facebook fa-1x"></i> </span></a>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>

        </div>
    </div>
</div>


