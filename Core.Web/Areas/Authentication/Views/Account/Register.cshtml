@model Core.Web.Areas.Authentication.Models.AccountViewModels

@{
    ViewData["Title"] = "Create Account";
    <style>

        /* custom css*/
        .btn-btn_f {
            background-color: #22398d !important;
            color: #fff;
        }
    </style>
}

<div class="page-content">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default m-t-10">
                <div class="panel-heading"><h3 class="text-center">Create Account</h3></div>
                <div class="panel-body col-sm-offset-1">
                    <p class="text-center alert alert-good"><i class="text-center fa fa-address-book-o"></i> Enter your details in the form below</p>
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success fade in">
                            <button class="close" data-dismiss="alert">
                                <i class="fa-fw fa fa-check-circle"></i>
                            </button>
                            @TempData["Success"]
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger fade in">
                            <button class="close" data-dismiss="alert">
                                <i class="fa-fw fa fa-times"></i>
                            </button>
                            @TempData["Error"]
                        </div>
                    }

                    @using (Html.BeginForm("Register", "account", new { ReturnUrl = ViewBag.ReturnUrl, @class = "form-horizontal", role = "form" }, FormMethod.Post))
                    {
                        <div class="row">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <div class="col-md-12 text-center">
                                    <div asp-validation-summary="ModelOnly"></div>

                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-mail-forward"></i></span>
                                            <input placeholder="Email" id="login" name="Email" value="" class="form-control" type="email" AUTOCOMPLETE="off">
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-1"> </div>
                                
                            </div>
                            

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                            <input placeholder="Confirm Password" id="login" name="Password" value="" class="form-control" type="password" AUTOCOMPLETE="off">
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-1"> </div>
                                <div class="form-group">
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                            <input placeholder="PasswordConfirm" id="login" name="PasswordConfirm" value="" class="form-control" type="password" AUTOCOMPLETE="off">
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        
                            <div class="form-group">
                                <div class="col-md-offset-4 col-lg-8">
                                    <button type="submit" class="btn btn-btn_f"><i class="fa fa-send"></i> Register</button>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="col-sm-12">
                        <div class="col-md-offset-4 col-md-8">
                            <a href="@Url.Action("login", "account")" style="color: #22398d;">
                                Already have an account?<small><b>Login here</b></small>
                            </a>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="pull-right">
                            <a href="https://www.linkedin.com/company/betsoftware/?originalSubdomain=za"><span> <i class="fa fa-linkedin fa-1x"></i>  </span> </a> &nbsp; <a href="#"><span><i class="fa fa-twitter fa-1x"></i> </span> </a> &nbsp; <a href="#" target="_blank"> <span><i class="fa fa-facebook fa-1x"></i> </span></a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



